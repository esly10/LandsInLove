<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.1.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-3.1.xsd">

	
	
	<mvc:view-controller path="/login" view-name="login" />
	<mvc:view-controller path="/citation-find" view-name="citation-find" />
	
	<bean class="org.springframework.mobile.device.view.LiteDeviceDelegatingViewResolver">
		<constructor-arg>
			<bean  id="publicTilesResolver"  class="org.springframework.web.servlet.view.tiles2.TilesViewResolver">  
				<property name="viewClass">
					<value>org.springframework.web.servlet.view.tiles2.TilesView</value>
				</property>
			</bean>
		</constructor-arg>
		<property name="mobilePrefix" value="mobile-" />
	</bean>

</beans>